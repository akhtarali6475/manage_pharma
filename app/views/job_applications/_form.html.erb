<%= form_with(model: job_application, local: true, class: 'form-horizontal center') do |form| %>
  <% if job_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_application.errors.count, "error") %> prohibited this job_application from being saved:</h2>

      <ul>
      <% job_application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :job_application_form_id, value: params[:job_application_form_id] %>

  <div class="form-group">
    <%= form.label :phone_number, class: "col-md-4 control-label" %>
    <div class="col-md-6">
      <%= form.text_field :phone_number, id: :job_application_phone_number %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "col-md-4 control-label" %>
    <div class="col-md-6">
      <%= form.text_field :email, id: :job_application_email %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :first_name, class: "col-md-4 control-label" %>
    <div class="col-md-6">
      <%= form.text_field :first_name, id: :job_application_first_name %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "col-md-4 control-label" %>
    <div class="col-md-6">
      <%= form.text_field :last_name, id: :job_application_last_name %>
    </div>
  </div>

  <div class="form-group">
    <%= form.fields_for :resume do |resume| %>
      <label for="exampleInputFile" class= "col-md-4 control-label">Upload a resume (doc/docx or pdf format)</label>
      <div class="col-md-6">
        <%= resume.file_field :attachment, label: false, wrapper: false%>
      </div>
    <% end%>
  </div>
  <div class="text-center">
    <%= form.submit %>
  </div>
<% end %>
